---
import { profileList } from '../data/ProfileLists';
---
<section class="mt-20">
  <div class="pt-20">
    <h2 class="text-xl text-gray-800 max-w-3xl font-bold md:text-6xl">About</h2>
    <ul class="text-lg my-8 text-gray-800 max-w-3xl">
      {
        profileList.map(({category, item}) => (
          <li>{category} : {item}</li>
        ))
      }
    </ul>
  </div>
  <a href="/about/">
    <span class="bg-blue-500 text-white px-4 py-2 gap-2 text-accent-text-over border border-accent-regular bg-accent-regular rounded-full text-md leading-relaxed">View More</span>  
  </a>
</section>